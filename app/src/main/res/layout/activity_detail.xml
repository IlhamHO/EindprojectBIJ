<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/iv_photo_detail"
        android:layout_width="0dp"
        android:layout_height="728dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tv_personage_detail"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="306dp"
        android:layout_marginRight="306dp"
        android:background="@color/colorPrimary"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/iv_photo_detail"
        app:layout_constraintHorizontal_bias="0.388"
        app:layout_constraintStart_toStartOf="@+id/iv_photo_detail"
        app:layout_constraintTop_toTopOf="@+id/iv_photo_detail" />

    <TextView
        android:id="@+id/tv_naam_detail"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="307dp"
        android:layout_marginRight="307dp"
        android:background="@color/colorPrimary"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/iv_photo_detail"
        app:layout_constraintHorizontal_bias="0.378"
        app:layout_constraintStart_toStartOf="@+id/iv_photo_detail"
        app:layout_constraintTop_toBottomOf="@+id/tv_personage_detail" />

    <TextView
        android:id="@+id/tv_jaar_detail"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="314dp"
        android:layout_marginRight="314dp"
        android:layout_marginBottom="619dp"
        android:background="@color/colorPrimary"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/iv_photo_detail"
        app:layout_constraintEnd_toEndOf="@+id/iv_photo_detail"
        app:layout_constraintHorizontal_bias="0.318"
        app:layout_constraintStart_toStartOf="@+id/iv_photo_detail"
        app:layout_constraintTop_toBottomOf="@+id/tv_naam_detail"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>